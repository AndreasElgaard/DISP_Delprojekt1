@page
@using System.Reflection
@model Frontend_Project.Pages.Haandvaerker.CreateModel
@{
    ViewData["Title"] = "Tilføj Håndværker";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div>
    <h1> Tilføj Håndværker</h1>
    <hr />
    <div class="row">
        <div class="col-md-2">
            <form method="post">
                <div class="form-group">
                
                    <label for="Fornavn" class="control-label">Fornavn</label>
                    
                    <input type="text" asp-for="LocalModel.HVFornavn" />
                </div>
                <div class="form-group">
                    <label for="Efternavn" class="control-label">Efternavn</label>
                    <input type="text" asp-for="LocalModel.HVEfternavn" />
                </div>
                <div class="form-group">
                    <label for="Ansættelsesdato" class="control-label">Ansættelsesdato</label>
                    <input type="datetime" asp-for="LocalModel.HVAnsaettelsedato" />
                </div>
                <div class="form-group">
                    <label for="Fagområde" class="control-label">Fagområde</label>
                    <input type="text" asp-for="LocalModel.HVFagomraade"/>
                </div>
                <div class="form-group">
                    <label for="ID" class="control-label">ID</label>
                    <input type="number" asp-for="LocalModel.HaandvaerkerId" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary shadow">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a class="btn btn-secondary" asp-page="/Haandvaerker/Index">Tilbage</a>
    </div>
</div>