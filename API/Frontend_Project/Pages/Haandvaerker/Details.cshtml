@page "{id:int}"
@model Frontend_Project.Pages.Haandvaerker.DetailsModel
@{
    ViewData["Title"] = "Detaljeret oversigt";
}
@RouteData.Values["ID"]


    <h1>Details</h1>

    <div>
        <h4>Håndværkeren @Model.localModel.Fornavn</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.localModel.Fornavn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.localModel.Efternavn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.localModel.Ansættelsesdato)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.localModel.Fagområde)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.localModel.ID)
            </dt>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.localModel.Vaerktoejskasse.id)
            </dt>
        </dl>
    </div>
    <div>
    <a class="btn btn-info" asp-route="/Haandvaerker/Edit" asp-route-id="@Model.localModel.ID">Edit</a>
    <a class="btn btn-primary" asp-route="/Haandvaerker/Edit" asp-route-id="@Model.localModel.ID">Delete</a>
    <a asp-page="/Index">Back to List</a>
</div>