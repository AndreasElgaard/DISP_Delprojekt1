@page "{id:int}"
@model Frontend_Project.Pages.VaerktoejsKasse.EditModel
@{

}

<div>
    <h1> Ændring af værktøjs kasse</h1>
    <hr />
    <div class="row">
        <div class="col-md-2">
            <form method="post">
                <div class="form-group">

                    <label for="id" class="control-label">ID</label>
                    <input type="number" asp-for="LocalModel.id" placeholder="@Model.LocalModel.id" />
                </div>
                <div class="form-group">
                    <label for="Model" class="control-label">Model</label>
                    <input type="text" asp-for="LocalModel.Model" placeholder="@Model.LocalModel.Model" />
                </div>
                <div class="form-group">
                    <label for="Fabrikant" class="control-label">Fabrikant</label>
                    <input type="text" asp-for="LocalModel.Fabrikant" placeholder="@Model.LocalModel.Fabrikant" />
                </div>
                <div class="form-group">
                    <label for="Farve" class="control-label">Farve</label>
                    <input type="text" asp-for="LocalModel.Farve" placeholder="@Model.LocalModel.Farve" />
                </div>
                <div class="form-group">
                    <label for="Anskaffet" class="control-label">Anskaffet</label>
                    <input type="datetime" asp-for="LocalModel.Anskaffet" placeholder="@Model.LocalModel.Anskaffet" />
                </div>
                <div class="form-group">
                    <label for="EjesAF" class="control-label">Ejes af</label>
                    <input type="number" asp-for="LocalModel.EjesAF.ID" placeholder="@Model.LocalModel.EjesAF.ID" />
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary shadow">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a class="btn btn-secondary" asp-page="/VaerktoejsKasse/Details" asp-route-id="LocalModel.id">Tilbage</a>
    </div>
</div>