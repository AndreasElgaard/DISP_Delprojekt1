@page
@model Frontend_Project.Pages.VaerktoejsKasse.IndexModel
@{
    ViewData["Title"] = "Værktøjskasse oversigt oversigt";
}

<div class="row">
    <div class="col-4 col-sm-4 col-lg-4 col-xl-4 col-md-4 p-5">
        <div id="orderheadline">
            <h1>Oversigt over værktøjskasser</h1>

            <p>
                <a class="btn btn-secondary shadow" asp-page="/VaerktoejsKasse/Create">Create New</a>
            </p>
        </div>
    </div>
    <div class="col col-sm col-lg col-xl col-md p-5">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Model
                    </th>
                    <th>
                        Fabrikant
                    </th>
                    <th>
                        Farve
                    </th>
                    <th>
                        Serienummer
                    </th>
                    <th>
                        Anskaffet
                    </th>
                    <th>
                        Ejes af
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.LocalModels)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VTKModel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VTKFabrikat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VTKFarve)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VTKSerienummer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VTKAnskaffet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VTKEjesAf)
                    </td>
                    <td>
                        <a class="btn btn-secondary shadow" asp-page="/VaerktoejsKasse/Details" asp-route-id="@item.VTKId">Choose</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>