@page "{id:int}"
@model Frontend_Project.Pages.VaerktoejsKasse.DeleteModel
@{
    ViewData["Title"] = "Slet værktøjskasse";
}


<h1>Sletning</h1>

<div>
    <h4>Er du sikker på at du vil slette værktøjskassen @Model.localModel.VTKId ?</h4>
    <hr />
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.localModel.VTKId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.localModel.VTKModel)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.localModel.VTKFabrikat)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.localModel.VTKFarve)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.localModel.VTKAnskaffet)
            </dt>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.localModel.VTKSerienummer)
            </dt>
            @*<dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.localModel.EjesAF.ID)
            </dt>*@
        </dl>
        <button class="btn btn-info" type="submit">Ja</button>
        <button class="btn btn-info" asp-page="/VaerktoejsKasse/Details" asp-route-id="@Model.localModel.VTKId">Nej</button>
    </form>
</div>
