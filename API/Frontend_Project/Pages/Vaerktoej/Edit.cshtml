@page "{id:int}"
@model Frontend_Project.Pages.Vaerktoej.EditModel
@{

}

<div>
    <h1> Ændring af værktøj</h1>
    <hr />
    <div class="row">
        <div class="col-md-2">
            <form method="post">
                <div class="form-group">

                    <label for="id" class="control-label">ID</label>
                    <input type="text" asp-for="LocalModel.id" placeholder="@Model.LocalModel.id" />
                </div>
                <div class="form-group">
                    <label for="Fabrikat" class="control-label">Fabrikat</label>
                    <input type="text" asp-for="LocalModel.Fabrikat" placeholder="@Model.LocalModel.Fabrikat" />
                </div>
                <div class="form-group">
                    <label for="Model" class="control-label">Model</label>
                    <input type="text" asp-for="LocalModel.Model" placeholder="@Model.LocalModel.Model" />
                </div>
                <div class="form-group">
                    <label for="SerieNummer" class="control-label">SerieNummer</label>
                    <input type="number" asp-for="LocalModel.SerieNummer" placeholder="@Model.LocalModel.SerieNummer" />
                </div>
                <div class="form-group">
                    <label for="Type" class="control-label">Type</label>
                    <input type="text" asp-for="LocalModel.Type" placeholder="@Model.LocalModel.Type" />
                </div>
                <div class="form-group">
                    <label for="Anskaffet" class="control-label">Anskaffet</label>
                    <input type="datetime" asp-for="LocalModel.Anskaffet" placeholder="@Model.LocalModel.Anskaffet" />
                </div>
                <div class="form-group">
                    <label for="LiggerIVTK" class="control-label">Værktøjskasse ID</label>
                    <input type="text" asp-for="LocalModel.LiggerIVTK" placeholder="@Model.LocalModel.LiggerIVTK" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary shadow">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a class="btn btn-secondary" asp-page="/Vaerktoej/Details" asp-route-id="LocalModel.id">Tilbage</a>
    </div>
</div>