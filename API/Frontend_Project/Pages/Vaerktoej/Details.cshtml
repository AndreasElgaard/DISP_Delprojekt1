@page "{id:int}"
@model Frontend_Project.Pages.Vaerktoej.DetailsModel
@{
    ViewData["Title"] = "Detaljeret oversigt";
}



    <h1>Details</h1>

    <div>
        <h4>Værktøj @Model.localModel.id</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.localModel.id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.localModel.Fabrikat)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.localModel.Model)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.localModel.SerieNummer)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.localModel.Type)
            </dt>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.localModel.Anskaffet)
            </dt>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.localModel.LiggerIVTK)
            </dt>
        </dl>
    </div>
    <div>
    <a class="btn btn-info" asp-route="/Vaerktoej/Edit" asp-route-id="@Model.localModel.id">Edit</a>
    <a class="btn btn-primary" asp-route="/Vaerktoej/Edit" asp-route-id="@Model.localModel.id">Delete</a>
    <a asp-page="/Index">Tilbage</a>
</div>