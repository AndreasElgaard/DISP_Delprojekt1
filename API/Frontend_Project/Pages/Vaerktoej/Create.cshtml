@page
@using System.Reflection
@model Frontend_Project.Pages.Vaerktoej.CreateModel
@{
    ViewData["Title"] = "Tilføj Værktøj";
}

<div>
    <h1> Tilføj Værktøj</h1>
    <hr />
    <div class="row">
        <div class="col-md-2">
            <form method="post">
                <div class="form-group">

                    <label for="id" class="control-label">ID</label>
                    <input type="text" asp-for="LocalModel.id" />
                </div>
                <div class="form-group">
                    <label for="Fabrikat" class="control-label">Fabrikat</label>
                    <input type="text" asp-for="LocalModel.Fabrikat" />
                </div>
                <div class="form-group">
                    <label for="Model" class="control-label">Model</label>
                    <input type="text" asp-for="LocalModel.Model" />
                </div>
                <div class="form-group">
                    <label for="Serienummer" class="control-label">SerieNummer</label>
                    <input type="number" asp-for="LocalModel.SerieNummer" />
                </div>
                <div class="form-group">
                    <label for="Type" class="control-label">Type</label>
                    <input type="text" asp-for="LocalModel.Type" />
                </div>
                <div class="form-group">
                    <label for="Anskaffet" class="control-label">Anskaffet</label>
                    <input type="datetime" asp-for="LocalModel.Anskaffet" />
                </div>
                <div class="form-group">
                    <label for="LiggeriVKT" class="control-label">Tilhører værktøjskasse</label>
                    <input type="text" asp-for="LocalModel.LiggerIVTK" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary shadow">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a class="btn btn-secondary" asp-page="/Vaerktoej/Index">Tilbage</a>
    </div>
</div>